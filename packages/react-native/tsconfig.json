{
  "include": ["src/*"],
  "compilerOptions": {
    "baseUrl": "./src/",
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "declaration": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
